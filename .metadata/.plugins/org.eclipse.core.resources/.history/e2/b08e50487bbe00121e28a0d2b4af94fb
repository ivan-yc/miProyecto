package com.example.tresenraya;

import android.app.Activity;
import android.os.Bundle;
import android.view.View;
import android.widget.ImageView;

public class CampoBatalla extends Activity {
	ImageView im;
	public void onCreate(Bundle b){
		super.onCreate(b);
		setContentView(R.layout.pantalla_juego);
	}
	
	public void cambiarBoton(View v){
		im=(ImageView)findViewById(R.id.c2);
		im.setImageResource(R.drawable.cruz);
		im=((ImageView)v).getImageAlpha();
	}
	
}
